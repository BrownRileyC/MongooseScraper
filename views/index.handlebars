<div class="container-fluid">
    <div class="row justify-content-between">
        <div class="col-4">
            <h2>WotC Article Scraper</h2>
        </div>
        <div class="col-6">
            <div class="row">
                <div class="col">
                    <button type="button" class="btn btn-success scrapeButton">Scrape Current Articles</button>
                </div>
                <div class="col">
                    <a href="/saved"><button type="button" class="btn btn-info">Saved Articles</button></a>
                </div>
                <div class="col">
                    <button type="button" class="btn btn-danger clearButton">Clear Articles</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="jumbotron">
    <h1 class="display-4">WotC Article Grabber</h1>
    <p class="lead">Quickly Grab the most recent D&D articles</p>
    <hr class="my-4">
    <p>Once we've scraped 'em you can check 'em out and even leave notes!</p>
    <a class="btn btn-primary btn-lg" role="button">Grab those Articles</a>
</div>

<div class="container-fluid article-card-holder">
    {{#each article}}
    <div class="card">
        <h5 class="card-header">{{this.headline}}</h5>
        <div class="card-body">
            <p class="card-text">{{this.summary}}</p>
            <div class="row justify-content-end">
                <div class="col-3">
                    <a href="{{this.link}}" class="btn btn-primary" target="_blank">Check it out</a>
                </div>
                <div class="col-3">
                    <button type="button" class="btn btn-info saveArticle" data-id="{{this._id}}">Save This</button>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>

