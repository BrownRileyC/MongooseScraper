<div class="container-fluid">
    <div class="row justify-content-between">
        <div class="col-4">
            <h2>WotC Article Scraper</h2>
        </div>
        <div class="col-4">
            <div class="row">
                <div class="col">
                    <a href="/"><button type="button" class="btn btn-info">Home</button></a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="jumbotron">
    <h1 class="display-4">WotC Article Grabber</h1>
    <p class="lead">Quickly Grab the most recent D&D articles</p>
    <hr class="my-4">
    <p>Once we've scraped 'em you can check 'em out and even leave notes!</p>
    <a class="btn btn-primary btn-lg" href="#" role="button">Grab those Articles</a>
</div>

<div class="container-fluid article-card-holder">
    {{#each article}}
    <div class="card" data-_id="{{this._id}}">
        <h5 class="card-header">{{this.headline}}</h5>
        <div class="card-body">
            <p class="card-text">{{this.summary}}</p>
            <div class="row justify-content-around">
                <div class="col">
                    <a href="{{this.link}}" class="btn btn-primary" target="_blank">Check it out</a>
                </div>
                <div class="col">
                    <button type="button" class="btn btn-primary noteModal">View Notes</button>
                </div>
                <div class="col">
                    <button type="button" class="btn btn-danger deleteButton">Remove</button>
                </div>
            </div>

        </div>
    </div>
    {{/each}}
</div>

<div class="modal fade" id="myModal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModalLabel">Notes</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid text-center">
                    <ul class="list-group noteList">
                    </ul>
                    <textarea class="col" placeholder="New Note" rows="4" cols="60"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary saveButton">Save Note</button>
            </div>
        </div>
    </div>
</div>


